<basic:MyPage x:Class="guwudang.Invoice.ListInvoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:guwudang.Invoice"
      xmlns:basic="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="710"
      Title="InvoicePage">

    <Grid Margin="8,0,-8,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="My Invoice" HorizontalAlignment="Left" Margin="13,8,0,0" VerticalAlignment="Top" ></Label>
        <Button Name = "newInvoiceBtn" Width="75" Height="37" Margin="0,8,413,0" Content="New" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Name = "deleteInvoiceBtn" Width="75" Height="37" Margin="0,7,318,0" Content="Delete" HorizontalAlignment="Right" VerticalAlignment="Top" Click="deleteInvoiceBtn_Click"/>
        <TextBox Name = "searchInvoiceTxt" Width="125" Height="20" Margin="0,24,172,0"  HorizontalAlignment="Right" VerticalAlignment="Top"/>

        <Border Background="GhostWhite" BorderBrush="Black" BorderThickness="0,3,0,0" Margin="0,80,10,-49" Padding="0" HorizontalAlignment="Right" Width="690">
            <ListView Name = "lvListInvoice" Margin="146,10,10,10"  ItemsSource="{Binding}" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Tag="{Binding id}" Checked="chkSelected_Checked" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding id}"  Header="Invoice ID"/>
                        <GridViewColumn DisplayMemberBinding="{Binding status}"  Header="Status"/>
                        <GridViewColumn DisplayMemberBinding="{Binding total}"  Header="Amount"/>
                        <GridViewColumn DisplayMemberBinding="{Binding created_at}"  Header="Date"/>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Detail"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Button Name="search_btn" Content="Search" HorizontalAlignment="Left" Margin="421,10,0,0" VerticalAlignment="Top" Width="83" Height="35" Click="search_btn_Click"/>
    </Grid>
</basic:MyPage>