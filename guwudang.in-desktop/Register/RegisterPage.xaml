<basic:MyPage x:Class="guwudang.Register.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:guwudang"
      xmlns:basic="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="RegisterPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="329*"></ColumnDefinition>
            <ColumnDefinition Width="271*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="name_txt" Grid.Row="0" HorizontalAlignment="Center" Grid.Column="0" Height="23" TextWrapping="Wrap" Text="Name" Width="176" Margin="212,99,212,-92" Grid.ColumnSpan="2"/>
        <TextBox Name="email_txt" Grid.Row="0" Grid.Column="0" Height="23" TextWrapping="Wrap" Text="Email" Width="176" Margin="212,127,212,-120" Grid.ColumnSpan="2"/>
        <TextBox Name="password_txt"  Grid.Row="0" Grid.Column="0" Height="23" TextWrapping="Wrap" Text="Password" Width="176" Margin="212,155,212,-148" Grid.ColumnSpan="2"/>
        <TextBox Name="passwordc_txt" Grid.Row="0" Grid.Column="0" Height="23" TextWrapping="Wrap" Text="Password Confirmation" Width="176" Margin="212,183,212,-176" Grid.ColumnSpan="2"/>
        <Button Name="register_btn"  Grid.Row="0" Grid.Column="0" Content="Register" Width="176" Margin="212,217,212,-217" Grid.ColumnSpan="2"/>
        <Button Name="back_btn"  Grid.Row="0" Grid.Column="0" Content="Back" Width="176" Margin="212,260,212,-260" Grid.ColumnSpan="2"/>
        <TextBlock Name="status_field" HorizontalAlignment="Left" Margin="276,72,0,-38" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" Width="53"/>
    </Grid>
</basic:MyPage>
