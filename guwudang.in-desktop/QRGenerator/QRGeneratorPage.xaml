<basic:MyPage x:Class="guwudang.QRGenerator.QRGeneratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:guwudang.QRGenerator"
      xmlns:basic="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QRGeneratorPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="QR Code Result" HorizontalAlignment="Center" FontSize="26"></TextBlock>
            <Image Margin="10" Width="300" Height="300" x:Name="imgQR"></Image>
            <!--<TextBox Margin="10" FontSize="16" Name="txtQR" Visibility="Hidden"></TextBox>
            <Button Margin="5" VerticalAlignment="Center" Height="50" Name="createQR" Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="16" Text="Create QR"></TextBlock>
                </StackPanel>
            </Button>-->

            <Button Margin="5" VerticalAlignment="Center" Height="50" Name="saveQR">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="16" Text="Save QR"></TextBlock>
                </StackPanel>
            </Button>

        </StackPanel>

    </Grid>
</basic:MyPage>
